<div class="container mt-5 mb-5">
  <div class="row justify-content-md-center">
    <div class="col-lg-6 offset-col-xs-12">
      <div class="post-body">
          <%= attachment_image_tag @post_image, :image, :fill, 200, 200, format: 'jpeg', fallback: "unnamed.jpg", size:'200x200' %>
          
          <%#= attachment_image_tag @post_image.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
      </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to(post_image_path(@post_image.id), class:"text-dark") do %>
              <strong><i class="far fa-flag"></i><span> <%= @post_image.title %></span></strong>
            <% end %>
          </p>
            <p class="card-title">説明：<%= @post_image.caption %></p>
          
            <p><%= link_to "by#{@post_image.user.name}", user_path(@post_image.user.id), class:"text-muted" %></p>
            <!--<span><i class="fas fa-user"></i> By <%#= @post_image.user.name %> ｜ </span>-->
            <span><i class="fa fa-calendar"></i> <%= @post_image.created_at.strftime('%Y/%m/%d') %> ｜ </span>
            <!--<span><i class="fa fa-comment"></i> <%#= link_to "#{@post_image.post_comments.count}", post_image_path(@post_image.id), class:"text-dark" %> ｜ </span>-->
          
            <span id="favorite-<%= @post_image.id %>">
              <%= render partial: "favorites/favorite-btn", locals: { post_image: @post_image } %>
            </span>
          
                <% if @post_image.user == current_user %>
                  <span> ｜ </span>
                  <%= link_to "編集", edit_post_image_path(@post_image), class:"text-dark" %>
                  <%= link_to "削除", post_image_path(@post_image), class:"text-dark", method: :delete %>
                <% end %>
              </div>
            </div>
            
        <div class="col-lg-6 offset-col-xs-12">
        <ul>
          <li id="comments_area">
            <%= render 'post_comments/index', post_comments: @post_comments %>
          </li>
        </ul>
        
        <div class="comment_create">
          <%= render 'post_comments/form', post_comments: @post_comments %>
        </div>
      
    </div>
  </div>
</div>