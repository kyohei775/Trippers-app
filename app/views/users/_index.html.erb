<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th>follows</th>
      <th>followers</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td>
          <%= link_to user_path(user) do %>
            <%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size:'40x40', class:'rounded-circle' %>
          <% end %>
          </td>
        <td>
          <%= link_to user_path(user), class:"text-dark" do %>
            <%= user.name %>
          <% end %>
          </td>
        <td><%= user.followings.count %></td>
        <td><%= user.followers.count %></td>
        <td>
          <% if current_user != user %>
            <% if current_user.following?(user) %>
              <%= link_to "unfollow", user_relationships_path(user.id), method: :delete, class: "btn btn-outline-secondary" %>
            <% else %>
              <%= link_to "follow", user_relationships_path(user.id), method: :post, class: "btn btn-outline-primary" %>
            <% end %>
          <% end %>
        </td>
        
      </tr>
    <% end %>

  </tbody>
</table>
