<div class="container mt-5 mb-5">
  <div class="profile-container">
    <h3 class="profile-name"><%= @user.name %></h3>
    <%= attachment_image_tag @user, :profile_image, :fill, 250, 250, fallback: "no_image.jpg", size:'100x100', class:'rounded-circle' %><br>
  
      <div class="mypage-form-follow">
    
  
        <%= link_to user_followings_path(@user), class:"btn btn-light" do %>
        <%= @user.followings.count %>follows<i class="fas fa-user-friends"></i>
        <% end %>
      </div>
        
      <div class="mypage-form-follow">
      
        <%= link_to user_followers_path(@user), class:"btn btn-light" do %>
        <%= @user.followers.count %>followers<i class="fas fa-user-friends"></i>
        <% end %>
        
        <% if current_user != @user %>
          <% if current_user.following?(@user) %>
            <%= link_to "unfollow", user_relationships_path(@user.id), method: :delete, class: "btn btn-outline-secondary" %>
          <% else %>
            <%= link_to "follow", user_relationships_path(@user.id), method: :post, class: "btn btn-outline-primary" %>
          <% end %>
        <% else %>
      <div class="mypage-form">
          <%= link_to edit_user_path(@user), class:"btn btn-light" do %>
          profile editing<i class="fas fa-user-edit"></i>
          <% end %>
        <% end %>
  
    <body>
      <%= yield %>
      <span id="back">
        <a href="">
          <%= image_tag asset_path('arrow.png'), data: {"turbolinks"=>false}, class: "arrow" %>
        </a>
      </span>
    </body>
  </div>
</div>
    <%= render 'post_images/list', post_images: @post_images %>
    <%#= paginate @post_images %>
